<odoo>
    <!-- Database SQL -->
    <record id="view_database_sql_tree" model="ir.ui.view">
        <field name="name">database.sql.tree</field>
        <field name="model">database.sql</field>
        <field name="arch" type="xml">
            <tree string="Databases">
                <field name="name_database"/>
                <field name="name"/>
                <field name="sql_seversql"/>
                <field name="table_ids"/>
                <field name="column_ids"/>
                <field name="partner_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <record id="view_database_sql_form" model="ir.ui.view">
        <field name="name">database.sql.form</field>
        <field name="model">database.sql</field>
        <field name="arch" type="xml">
            <form string="Database">
                <sheet>
                    <group>
                        <field name="name_database"/>
                        <field name="name" readonly="1"/>
                        <field name="sql_seversql" readonly="1"/>
                        <field name="telegraf_data_id" readonly="1"/>
                        <field name="partner_ids" widget="many2many_tags"/>
                    </group>
                    <notebook>
                        <page string="Thông tin bảng">
                            <field name="table_ids">
                                <tree editable="bottom">
                                    <field name="name_table"/>
                                    <field name="sum_record"/>
                                    <field name="record_date"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Cấu trúc bảng">
                            <field name="column_ids">
                                <tree editable="bottom">
                                    <field name="name_table"/>
                                    <field name="column_name"/>
                                    <field name="data_type"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Table SQL -->
    <record id="view_table_sql_tree" model="ir.ui.view">
        <field name="name">table.sql.tree</field>
        <field name="model">table.sql</field>
        <field name="arch" type="xml">
            <tree string="Tables">
                <field name="database_id"/>
                <field name="name_table"/>
                <field name="sum_record"/>
                <field name="record_date"/>
            </tree>
        </field>
    </record>

    <record id="view_table_sql_form" model="ir.ui.view">
        <field name="name">table.sql.form</field>
        <field name="model">table.sql</field>
        <field name="arch" type="xml">
            <form string="Table">
                <sheet>
                    <group>
                        <field name="database_id" readonly="1"/>
                        <field name="name_table" readonly="1"/>
                        <field name="record_date" readonly="1"/>
                        <field name="sum_record" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_table_column_sql_tree" model="ir.ui.view">
        <field name="name">table.column.sql.tree</field>
        <field name="model">table.column.sql</field>
        <field name="arch" type="xml">
            <tree string="Tables">
                <field name="name_table"/>
                <field name="database_id"/>
                <field name="column_name"/>
                <field name="data_type"/>
            </tree>
        </field>
    </record>

    <record id="view_table_column_sql_form" model="ir.ui.view">
        <field name="name">table.column.sql.form</field>
        <field name="model">table.column.sql</field>
        <field name="arch" type="xml">
            <form string="Table">
                <sheet>
                    <group>
                        <field name="name_table" readonly="1"/>
                        <field name="database_id" readonly="1"/>
                        <field name="column_name" readonly="1"/>
                        <field name="data_type" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_table_sql_pivot" model="ir.ui.view">
        <field name="name">table.sql.pivot</field>
        <field name="model">table.sql</field>
        <field name="arch" type="xml">
            <pivot string="Thống kê Table SQL">
                <!-- Group theo Database -->
                <field name="database_id" type="row"/>
                <!-- Group theo Ngày -->
                <field name="record_date" type="col"/>
                <!-- Số liệu cần thống kê -->
                <field name="sum_record" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="view_table_sql_graph" model="ir.ui.view">
        <field name="name">table.sql.graph</field>
        <field name="model">table.sql</field>
        <field name="arch" type="xml">
            <graph string="Thống kê dữ liệu theo ngày" type="line">
                <!-- Trục X: ngày (theo ngày, không theo tháng) -->
                <field name="record_date" type="row" interval="day"/>
                <!-- Nhóm theo tên bảng -->
                <field name="name_table" type="col"/>
                <!-- Giá trị Y: tổng số dữ liệu -->
                <field name="sum_record" type="measure"/>
            </graph>
        </field>
    </record>

        <!-- Actions -->
    <record id="action_database_sql" model="ir.actions.act_window">
        <field name="name">Databases</field>
        <field name="res_model">database.sql</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_table_column_sql" model="ir.actions.act_window">
        <field name="name">Tables column</field>
        <field name="res_model">table.column.sql</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_table_sql" model="ir.actions.act_window">
        <field name="name">Tables</field>
        <field name="res_model">table.sql</field>
        <field name="view_mode">tree,form,graph,pivot</field>
    </record>




    <!-- Menu Items -->
    <menuitem id="menu_info_sql_root" name="SQL Info" sequence="5" web_icon="info_sql,static/src/img/logo.png"/>

    <menuitem id="menu_database_sql" name="Databases" parent="menu_info_sql_root" action="action_database_sql"/>
    <menuitem id="menu_table_sql" name="Thông tin bảng" parent="menu_info_sql_root" action="action_table_sql"/>
    <menuitem id="menu_table_column_sql" name="Cấu trúc bảng" parent="menu_info_sql_root" action="action_table_column_sql"/>

</odoo>